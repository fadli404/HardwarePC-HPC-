<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddActivity_mobo"
    android:background="@color/merah">
    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tambah Motherboard List"
        android:textColor="@color/putih"
        android:textSize="20dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"/>

    <EditText
        android:id="@+id/namaMOBO_input"
        android:layout_width="321dp"
        android:layout_height="48dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="150dp"
        android:ems="10"
        android:gravity="center"
        android:hint="Nama"
        android:textColor="@color/putih"
        android:textSize="15dp"
        android:inputType="textPersonName"
        android:text="" />

    <EditText
        android:id="@+id/quantityMOBO_input"
        android:layout_width="200dp"
        android:layout_height="48dp"
        android:layout_below="@+id/namaMOBO_input"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:gravity="center"
        android:hint="Quantity"
        android:inputType="number"
        android:text=""
        android:textColor="@color/putih" />

    <EditText
        android:id="@+id/priceMOBO_input"
        android:layout_width="200dp"
        android:layout_height="48dp"
        android:ems="10"
        android:inputType="number"
        android:hint="Price"
        android:layout_below="@+id/quantityMOBO_input"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        android:gravity="center"
        android:textColor="@color/putih"
        android:text="" />

    <Button
        android:id="@+id/add_mobo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:layout_below="@+id/priceMOBO_input"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        android:background="@drawable/bulat"
        android:text="Tambah"
        android:textColor="@color/putih"/>

</RelativeLayout>