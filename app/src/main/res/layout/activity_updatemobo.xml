<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Updatemobo"
    android:background="@color/biru">

    <TextView
        android:id="@+id/judul"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Update Motherboard List"
        android:textColor="@color/putih"
        android:textSize="20dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"/>

    <EditText
        android:id="@+id/update_nama_inputMOBO"
        android:layout_width="250dp"
        android:layout_height="45dp"
        android:layout_marginTop="30dp"
        android:ems="10"
        android:layout_below="@+id/judul"
        android:layout_toRightOf="@+id/gambar_mobo"
        android:gravity="left"
        android:hint="Motherboard Name"
        android:textColor="@color/putih"
        android:textSize="15dp"
        android:inputType="textPersonName"
        android:text="" />

    <EditText
        android:id="@+id/update_quantity_inputMOBO"
        android:layout_width="250dp"
        android:layout_height="45dp"
        android:layout_below="@+id/update_nama_inputMOBO"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:gravity="left"
        android:hint="Quantity"
        android:layout_toRightOf="@+id/gambar_quantity"
        android:inputType="number"
        android:text=""
        android:textColor="@color/putih" />

    <EditText
        android:id="@+id/update_price_inputMOBO"
        android:layout_width="250dp"
        android:layout_height="45dp"
        android:ems="10"
        android:inputType="number"
        android:hint="Price"
        android:layout_below="@+id/update_quantity_inputMOBO"
        android:layout_toRightOf="@+id/gambar_price"
        android:layout_marginTop="10dp"
        android:gravity="left"
        android:textColor="@color/putih"
        android:text="" />

    <Button
        android:id="@+id/update_mobo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/update_price_inputMOBO"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        android:background="@drawable/bulat"
        android:text="Update"
        android:textAllCaps="false"
        android:textColor="@color/putih" />
    <Button
        android:id="@+id/delete_mobo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:layout_below="@+id/update_mobo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/bulat"
        android:text="Hapus"
        android:textColor="@color/putih"/>
    <ImageView
        android:layout_alignParentLeft="true"
        android:id="@+id/gambar_mobo"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_below="@id/judul"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="30dp"
        app:srcCompat="@drawable/mobo" />
    <ImageView
        android:layout_alignParentLeft="true"
        android:id="@+id/gambar_quantity"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_below="@+id/gambar_mobo"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="10dp"
        app:srcCompat="@drawable/gambar_quantity" />
    <ImageView
        android:layout_alignParentLeft="true"
        android:id="@+id/gambar_price"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_below="@+id/gambar_quantity"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="10dp"
        app:srcCompat="@drawable/gambar_price" />

</RelativeLayout>