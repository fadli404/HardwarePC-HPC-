<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".processor"
    android:background="@color/coklat">

  <TextView
      android:id="@+id/pro_nodata"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Processor"
      android:alpha="0.5"
      android:visibility="gone"
      android:textSize="50dp"
      android:textStyle="bold"
      android:textColor="@color/putih"
      android:layout_centerInParent="true"/>
  <com.google.android.material.bottomnavigation.BottomNavigationView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:id="@+id/bottom_navigation"
      app:itemBackground="@color/coklat2"
      app:itemTextColor="@drawable/selector"
      app:itemIconTint="@drawable/selector"
      app:menu="@menu/menu_navigation"
      android:layout_alignParentBottom="true"/>
  <androidx.recyclerview.widget.RecyclerView
      android:id="@+id/recyclerView_pro"
      android:layout_width="match_parent"
      android:layout_height="646dp"
      android:layout_above="@+id/bottom_navigation"
      android:layout_marginBottom="29dp" />

  <com.google.android.material.floatingactionbutton.FloatingActionButton
      android:id="@+id/add_button_pro"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_above="@+id/bottom_navigation"
      android:layout_alignParentEnd="true"
      android:layout_alignParentRight="true"
      android:layout_marginEnd="41dp"
      android:layout_marginRight="41dp"
      android:layout_marginBottom="44dp"
      android:clickable="true"
      android:focusable="true"
      app:srcCompat="@drawable/tambah" />

  </RelativeLayout>